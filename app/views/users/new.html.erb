<div class="users new">
  <h1>Add a New Member</h1>

  <%= form_with model: @user do |form| %>

    <table class="table_center" summary="User form fields" cellspacing="10" style="width:500px">
      <tr>
        <th>First Name</th>
        <td><%= form.text_field :first_name, id:'first_name' %></td>
      </tr>
      <tr>
        <th>Last Name</th>
        <td><%= form.text_field :last_name, id:'last_name' %></td>
      </tr>
      <tr>
        <th>Position</th>
        <td><%= form.text_field :position_id, id:'position_id' %></td>
      </tr>
      <tr>
        <th>Member Points</th>
        <td><%= form.text_field :member_points, id:'member_points' %></td>
      </tr>
      <tr>
        <th>NetID</th>
        <td><%= form.text_field :username, id:'username' %></td>
      </tr>
      <tr>
        <th>Email</th>
        <td><%= form.text_field :email, id:'email' %></td>
      </tr>
    </table>
    <div class='button_center'>
      <%= form.submit "Add Member", :class=>'button'  %>
    </div>
  <% end %>
</div>
