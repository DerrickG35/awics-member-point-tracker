<% @current_user = Admin.where(id: 1) %>
<% @current_user.each do |user| %>
  <% @userList = User.where(:email => user.email) %>
  <% @userList.each do |match|%>
    <% if !match.email.blank? %>
      <h4>Welcome: <%= user.full_name %> - <%= user.email %> (<%= match.position_id %>) <h4>
    <% end %>
<%# <h1>Aggie Women in Computer Science</h1> %>
<h3 class='centerText'>Dashboard</h3>
      <h4 class='centerText'>Current Login: </h4>

<div class='currentLoginCard'>
  <% @current_user = Admin.where(id: 1) %>
  <% @current_user.each do |user| %>
    <div class="avatarContainer">
      <%= image_tag(user.avatar_url, :class => "userAvatar")   %>
    </div>
      <p> <%= user.full_name %> - <%= user.email %></p>
      <% @userList = User.where(:email => user.email) %>
      <% @userList.each do |match|%>
        <% if !match.email.blank? %>
          <p> Position: <%= match.position_id %> <p>
        <% end %>
        <% if match.position_id == 'member' %>
          <p> You are unable to add users or edit member points.</p>
        <% else %>
          <p> You have permission to add users.</p>
        <% end %>
      <% end %>
  <%= link_to "Sign Out", destroy_admin_session_path %>
  <% end %>
</div>

<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="users index">

  <h1>Members</h1>

  <table class="table_center" summary="User list" cellspacing="10" style="width:700px">
    <tr>

  <h2 class='centerText' >Members</h2>

  <table class="listing" summary="User list" cellspacing="10" style="width:1800px">
    <tr class="header"  style="text-align:left">
      <th>NetID</th>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Position</th>
      <th>Points</th>
    </tr>
    <% @users.each do |user| %>
    <tr  style="text-align:left">
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.position_id %></td>
      <td><%= user.member_points %></td>

      <% @userList.each do |match|%>
      <td class="actions">
          <%= link_to("Points Breakdown", attendance_path(user), :class => 'action show') %>
      </td>
      <% end %>
    </tr>
    <% end %>
  </table>
