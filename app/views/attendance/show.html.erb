<h1>Aggie Women in Computer Science</h1>

<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= link_to("<< Back to Members List", users_path, :class => 'back-link') %>

<div class="users show">
  <h2><%= @user.first_name + " " + @user.last_name %></h2>

  <table>
  <% @attendances.each do |attendance| %>
    <tr>
      <td><%= attendance.event_id %></td>
      <% @events.each do |event| %>
          <% if event.event_name.match?(attendance.event_id)%>
            <td><%= event.point_amount %></td>
          <% end %>
      <% end %>
  <% end %>
</table>

</div>
